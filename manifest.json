{
  "name": "PopupsBeGone",
  "description": "Removes new tab popups when enabled",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab", "scripting"
  ],
  "action": 
  {
    "default_popup": "index.html",
    "default_icon": 
    {
      "16": "Assets/Images/Icons/cancel 16.png",
      "32": "Assets/Images/Icons/cancel 32.png",
      "128": "Assets/Images/Icons/cancel 128.png"
    }
  },
  "icons": 
  {
      "16": "Assets/Images/Icons/cancel 16.png",
      "32": "Assets/Images/Icons/cancel 32.png",
      "128": "Assets/Images/Icons/cancel 128.png"
  },
  "background": 
  {
    "service_worker": "script.js"
  }
}